# Server configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info  # debug, info, warning, error, critical
WORKERS=4  # Number of Gunicorn workers

# Authentication
MCP_API_KEY=your-secure-api-key-here  # Change this in production!

# CORS configuration (comma-separated)
ALLOWED_ORIGINS=*  # Use specific origins in production
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# SSL configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/nginx-selfsigned.crt
SSL_KEY_PATH=/etc/ssl/private/nginx-selfsigned.key

# Optional: Database configuration (if needed later)
# DATABASE_URL=postgresql://user:password@localhost:5432/croissant_mcp

# Optional: Redis configuration (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Monitoring
# ENABLE_METRICS=true
# PROMETHEUS_MULTIPROC_DIR=/tmp 